<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <GridLayout
        android:visibility="visible"
        android:id="@+id/worldGrid"
        android:columnCount="1"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAMA BAA HOSPITAL AND RESEARCH CENTER"
                android:textSize="15sp"
                android:textIsSelectable="true"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: "
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/contact_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Sandip Gorkhali"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: "
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@color/text"/>

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="064-420250,9805854242"
                android:textIsSelectable="true"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="14dp"
                android:textColor="@color/text_title"/>

        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:columnCount="2"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/call_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/border_layout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_title"
                android:text="Call"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/direction_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="0"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/border_layout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_title"
                android:text="Direction"/>
        </LinearLayout>
    </GridLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>